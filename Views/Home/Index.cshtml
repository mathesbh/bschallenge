@model IEnumerable<BSImoveis.Models.Propertie>

@{
    ViewData["Title"] = "BSImóveis";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @foreach (var item in Model)
            {
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img class="img-fluid pt-5" src="~/assets/images/casa.png" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </h5>
                                <p class="card-text">
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Area)m² - 
                                    </span>
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Room) quartos
                                    </span>
                                    <h5>
                                        Valor: R$@Html.DisplayFor(modelItem => item.Value)
                                    </h5>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
